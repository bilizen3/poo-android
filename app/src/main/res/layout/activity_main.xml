<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHeritage"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Heritage"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEncapsulation"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Encapsulation"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPolimorfismo"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Polimorfismo"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAbstract"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Abstract"/>

    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnInterface"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="Interface"/>

</androidx.appcompat.widget.LinearLayoutCompat>